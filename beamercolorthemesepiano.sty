% Palette
\setbeamercolor*{palette primary}{use=structure,fg=solarizedBlue,bg=solarizedBase2}
\setbeamercolor*{palette secondary}{use=structure,fg=solarizedBase03,bg=solarizedBase3}
\setbeamercolor*{palette tertiary}{use=structure,fg=solarizedYellow,bg=solarizedBase3}

% Titles, background
% \setbeamercolor*{titlelike}{use=structure,parent=palette primary}
\setbeamercolor*{title}{use=structure,parent=palette primary}
\setbeamercolor*{frametitle}{use=structure,parent=palette primary}
\setbeamercolor*{framesubtitle}{use=structure,parent=palette primary}
\setbeamercolor*{background canvas}{use=structure,bg=solarizedBase3}

\setbeamercolor*{section in head/foot}{use=structure,parent=palette secondary}
\setbeamercolor*{itemize item}{use=structure,fg=solarizedYellow}
\setbeamercolor*{item projected}{use=structure,fg=solarizedBase3,bg=solarizedBase03} % enumerate items and toc sections

\setbeamercolor{section in toc}{parent=palette secondary}
% Blocks
\setbeamercolor{block title}{fg=solarizedBlue!30,bg=solarizedBlue}
\setbeamercolor{block body}{fg=solarizedBase03,bg=solarizedBlue!20}
\setbeamercolor{block title alerted}{fg=solarizedOrange!30,bg=solarizedOrange}
\setbeamercolor{block body alerted}{fg=solarizedBase03,bg=solarizedOrange!20}
\setbeamercolor{block title example}{fg=solarizedGreen!30,bg=solarizedGreen}
\setbeamercolor{block body example}{fg=solarizedBase03,bg=solarizedGreen!20}

